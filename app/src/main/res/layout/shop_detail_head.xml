<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="125dp"
                                                   android:background="@drawable/shop_detail_head_bg">

    <TextView
            android:text="店铺名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shop_dh_name"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp" android:textColor="@color/black" android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>
    <TextView
            android:text="配送时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shop_dh_time"
            app:layout_constraintTop_toBottomOf="@+id/shop_dh_name"
            android:layout_marginTop="8dp" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="5dp"
            android:textColor="@color/color_gray"/>
    <TextView
            android:text="@string/check_password"
            android:layout_width="250sp"
            android:layout_height="40sp" android:id="@+id/shop_dh_notice"
            app:layout_constraintTop_toBottomOf="@+id/shop_dh_time"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="5dp"
            android:layout_marginStart="12dp" tools:textSize="12sp" android:textColor="@color/color_gray"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars[4]"
            android:id="@+id/shop_dh_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="20dp" android:layout_marginTop="12dp"/>
    <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/shop_dh_name"
            android:layout_marginTop="10dp" android:layout_marginStart="12dp"
            android:background="@drawable/time"/>
</androidx.constraintlayout.widget.ConstraintLayout>