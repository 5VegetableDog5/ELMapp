<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100sp"
                                                   tools:background="@drawable/white_oval_bg">

    <ImageView
            android:layout_width="120sp"
            android:layout_height="80sp" tools:srcCompat="@tools:sample/backgrounds/scenic[1]"
            android:id="@+id/oi_food_img"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15sp" android:layout_marginTop="10sp"
    />
    <TextView
            android:text="珍珠奶茶"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/oi_foodname_tv"
            app:layout_constraintStart_toEndOf="@+id/oi_food_img" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="15dp" android:textColor="@color/black"/>
    <TextView
            android:text="x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/oi_foodcount_tv"
            android:layout_marginTop="18sp"
            app:layout_constraintTop_toBottomOf="@+id/oi_foodname_tv" android:layout_marginStart="15sp"
            app:layout_constraintStart_toEndOf="@+id/oi_food_img" android:textColor="@color/color_gray"/>
    <TextView
            android:text="￥888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/oi_food_totalprice_tv"
            android:layout_marginEnd="25sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="41sp" android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>