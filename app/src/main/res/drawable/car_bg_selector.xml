<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checkable="false"
            android:state_checked="false">
        <shape android:shape="oval">
            <corners android:radius="10dp"/>
            <solid android:color="@color/color_gray"/>
        </shape>
    </item>

    <item android:state_checkable="false"
          android:state_checked="true">
        <shape android:shape="oval" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <corners android:radius="10dp"/>
            <solid android:color="@color/car_checked_color"/>
        </shape>
    </item>

</selector>